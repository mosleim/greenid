---
import BaseLayout from '../../layouts/BaseLayout.astro';

export const prerender = false;

// Auth check
const sessionCookie = Astro.cookies.get('admin_session');
if (!sessionCookie) {
  return Astro.redirect('/admin');
}
---

<BaseLayout title="Admin Dashboard">
  <div class="min-h-screen bg-gray-50" x-data="adminDashboard()">
    <!-- Admin Header -->
    <header class="bg-white border-b border-gray-200">
      <div class="container-wide py-4">
        <div class="flex items-center justify-between">
          <h1 class="font-display text-2xl font-bold text-gray-900">
            Admin Dashboard
          </h1>
          <div class="flex items-center gap-4">
            <a href="/" target="_blank" class="text-sm text-gray-600 hover:text-primary-600">
              Lihat Website â†’
            </a>
            <form action="/api/admin/logout" method="POST">
              <button type="submit" class="btn btn-secondary text-sm">
                Logout
              </button>
            </form>
          </div>
        </div>
      </div>
    </header>
    
    <main class="container-wide py-8">
      <!-- Quick Stats -->
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 mb-8">
        <div class="card">
          <div class="text-sm text-gray-600 mb-1">Supporters</div>
          <div class="font-display text-3xl font-bold text-primary-600" x-text="loading ? '...' : stats.supporters">-</div>
        </div>
        <div class="card">
          <div class="text-sm text-gray-600 mb-1">Influencers</div>
          <div class="font-display text-3xl font-bold text-blue-600" x-text="loading ? '...' : stats.influencers">-</div>
        </div>
        <div class="card">
          <div class="text-sm text-gray-600 mb-1">Politicians</div>
          <div class="font-display text-3xl font-bold text-purple-600" x-text="loading ? '...' : stats.politicians">-</div>
        </div>
        <div class="card">
          <div class="text-sm text-gray-600 mb-1">Statements</div>
          <div class="font-display text-3xl font-bold text-orange-600" x-text="loading ? '...' : stats.statements">-</div>
        </div>
        <div class="card">
          <div class="text-sm text-gray-600 mb-1">Volunteers</div>
          <div class="font-display text-3xl font-bold text-teal-600" x-text="loading ? '...' : stats.volunteers">-</div>
        </div>
        <div class="card">
          <div class="text-sm text-gray-600 mb-1">Organisasi</div>
          <div class="font-display text-3xl font-bold text-rose-600" x-text="loading ? '...' : stats.organizations">-</div>
        </div>
      </div>
      
      <!-- Management Sections -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <a href="/admin/influencers" class="card hover:shadow-lg transition-shadow group">
          <div class="text-3xl mb-3">ğŸ“¸</div>
          <h2 class="font-semibold text-lg mb-2">Kelola Influencer</h2>
          <p class="text-sm text-gray-600 mb-4">Tambah, edit, atau hapus data influencer</p>
          <span class="text-primary-600 text-sm font-medium group-hover:underline">Kelola â†’</span>
        </a>
        
        <a href="/admin/politicians" class="card hover:shadow-lg transition-shadow group">
          <div class="text-3xl mb-3">ğŸ›ï¸</div>
          <h2 class="font-semibold text-lg mb-2">Kelola Politisi</h2>
          <p class="text-sm text-gray-600 mb-4">Tambah, edit, atau hapus data politisi</p>
          <span class="text-primary-600 text-sm font-medium group-hover:underline">Kelola â†’</span>
        </a>
        
        <a href="/admin/statements" class="card hover:shadow-lg transition-shadow group">
          <div class="text-3xl mb-3">ğŸ’¬</div>
          <h2 class="font-semibold text-lg mb-2">Kelola Pernyataan</h2>
          <p class="text-sm text-gray-600 mb-4">Tambah, edit, atau hapus pernyataan politisi</p>
          <span class="text-primary-600 text-sm font-medium group-hover:underline">Kelola â†’</span>
        </a>
        
        <a href="/admin/supporters" class="card hover:shadow-lg transition-shadow group">
          <div class="text-3xl mb-3">ğŸ‘¥</div>
          <h2 class="font-semibold text-lg mb-2">Lihat Supporters</h2>
          <p class="text-sm text-gray-600 mb-4">Daftar orang yang mendukung kampanye</p>
          <span class="text-primary-600 text-sm font-medium group-hover:underline">Lihat â†’</span>
        </a>
        
        <a href="/admin/volunteers" class="card hover:shadow-lg transition-shadow group">
          <div class="text-3xl mb-3">âœŠ</div>
          <h2 class="font-semibold text-lg mb-2">Lihat Volunteers</h2>
          <p class="text-sm text-gray-600 mb-4">Daftar calon relawan yang mendaftar</p>
          <span class="text-primary-600 text-sm font-medium group-hover:underline">Lihat â†’</span>
        </a>
        
        <a href="/admin/organizations" class="card hover:shadow-lg transition-shadow group">
          <div class="text-3xl mb-3">ğŸ¢</div>
          <h2 class="font-semibold text-lg mb-2">Lihat Organisasi</h2>
          <p class="text-sm text-gray-600 mb-4">Daftar organisasi yang ingin bermitra</p>
          <span class="text-primary-600 text-sm font-medium group-hover:underline">Lihat â†’</span>
        </a>
      </div>
    </main>
  </div>
  
  <script is:inline>
    document.addEventListener('alpine:init', () => {
      Alpine.data('adminDashboard', () => ({
        loading: true,
        stats: {
          supporters: 0,
          influencers: 0,
          politicians: 0,
          statements: 0,
          volunteers: 0,
          organizations: 0
        },
        
        async init() {
          await this.fetchStats();
        },
        
        async fetchStats() {
          try {
            const res = await fetch('/api/admin/stats');
            if (res.ok) {
              this.stats = await res.json();
            }
          } catch (error) {
            console.error('Failed to fetch stats:', error);
          } finally {
            this.loading = false;
          }
        }
      }));
    });
  </script>
</BaseLayout>
