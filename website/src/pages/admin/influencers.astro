---
import BaseLayout from '../../layouts/BaseLayout.astro';

export const prerender = false;

// Auth check
const sessionCookie = Astro.cookies.get('admin_session');
if (!sessionCookie) {
  return Astro.redirect('/admin');
}
---

<BaseLayout title="Kelola Influencer - Admin">
  <div class="min-h-screen bg-gray-50" x-data="influencerManager()">
    <!-- Admin Header -->
    <header class="bg-white border-b border-gray-200">
      <div class="container-wide py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-4">
            <a href="/admin/dashboard" class="text-gray-500 hover:text-gray-700">
              ‚Üê Dashboard
            </a>
            <h1 class="font-display text-2xl font-bold text-gray-900">
              Kelola Influencer
            </h1>
          </div>
          <button @click="openModal()" class="btn btn-primary">
            + Tambah Influencer
          </button>
        </div>
      </div>
    </header>
    
    <main class="container-wide py-8">
      <!-- Loading State -->
      <div x-show="loading" class="text-center py-12">
        <div class="text-gray-500">Memuat data...</div>
      </div>
      
      <!-- Empty State -->
      <div x-show="!loading && items.length === 0" class="text-center py-12">
        <div class="text-5xl mb-4">üì∏</div>
        <h2 class="text-xl font-semibold text-gray-700 mb-2">Belum ada data influencer</h2>
        <p class="text-gray-500 mb-4">Mulai tambahkan influencer yang mendukung kampanye</p>
        <button @click="openModal()" class="btn btn-primary">+ Tambah Influencer</button>
      </div>
      
      <!-- Data Table -->
      <div x-show="!loading && items.length > 0" class="card overflow-hidden">
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50 border-b">
              <tr>
                <th class="text-left p-4 font-semibold text-gray-700">Nama</th>
                <th class="text-left p-4 font-semibold text-gray-700">Handle</th>
                <th class="text-left p-4 font-semibold text-gray-700">Platform</th>
                <th class="text-left p-4 font-semibold text-gray-700">Followers</th>
                <th class="text-left p-4 font-semibold text-gray-700">Tier</th>
                <th class="text-left p-4 font-semibold text-gray-700">Verified</th>
                <th class="text-right p-4 font-semibold text-gray-700">Aksi</th>
              </tr>
            </thead>
            <tbody class="divide-y">
              <template x-for="item in items" :key="item.id">
                <tr class="hover:bg-gray-50">
                  <td class="p-4" x-text="item.name"></td>
                  <td class="p-4">
                    <span class="text-primary-600" x-text="item.handle"></span>
                  </td>
                  <td class="p-4">
                    <span class="px-2 py-1 rounded text-xs font-medium"
                      :class="{
                        'bg-pink-100 text-pink-700': item.platform === 'instagram',
                        'bg-black text-white': item.platform === 'tiktok',
                        'bg-blue-100 text-blue-700': item.platform === 'twitter',
                        'bg-red-100 text-red-700': item.platform === 'youtube'
                      }"
                      x-text="item.platform"></span>
                  </td>
                  <td class="p-4" x-text="formatNumber(item.followersCount)"></td>
                  <td class="p-4">
                    <span class="px-2 py-1 rounded text-xs font-medium"
                      :class="{
                        'bg-amber-100 text-amber-700': item.tier === 'bronze',
                        'bg-gray-200 text-gray-700': item.tier === 'silver',
                        'bg-yellow-100 text-yellow-700': item.tier === 'gold',
                        'bg-purple-100 text-purple-700': item.tier === 'platinum'
                      }"
                      x-text="item.tier"></span>
                  </td>
                  <td class="p-4">
                    <span x-show="item.isVerified" class="text-green-600">‚úì</span>
                    <span x-show="!item.isVerified" class="text-gray-400">-</span>
                  </td>
                  <td class="p-4 text-right">
                    <button @click="editItem(item)" class="text-blue-600 hover:text-blue-800 mr-3">Edit</button>
                    <button @click="deleteItem(item.id)" class="text-red-600 hover:text-red-800">Hapus</button>
                  </td>
                </tr>
              </template>
            </tbody>
          </table>
        </div>
      </div>
    </main>
    
    <!-- Modal -->
    <div x-show="showModal" x-cloak class="fixed inset-0 z-50 overflow-y-auto" aria-modal="true">
      <div class="flex items-center justify-center min-h-screen px-4">
        <div class="fixed inset-0 bg-black bg-opacity-50" @click="closeModal()"></div>
        
        <div class="relative bg-white rounded-xl shadow-xl max-w-lg w-full p-6">
          <h2 class="font-display text-xl font-bold mb-6" x-text="editingId ? 'Edit Influencer' : 'Tambah Influencer'"></h2>
          
          <form @submit.prevent="saveItem()">
            <div class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Nama *</label>
                <input type="text" x-model="form.name" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
              </div>
              
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Handle *</label>
                  <input type="text" x-model="form.handle" required placeholder="@username" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Platform *</label>
                  <select x-model="form.platform" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                    <option value="instagram">Instagram</option>
                    <option value="tiktok">TikTok</option>
                    <option value="twitter">Twitter/X</option>
                    <option value="youtube">YouTube</option>
                  </select>
                </div>
              </div>
              
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Jumlah Followers</label>
                  <input type="number" x-model.number="form.followersCount" min="0" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Engagement Rate (%)</label>
                  <input type="number" x-model.number="form.engagementRate" min="0" max="100" step="0.1" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                </div>
              </div>
              
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Tier</label>
                  <select x-model="form.tier" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                    <option value="bronze">Bronze</option>
                    <option value="silver">Silver</option>
                    <option value="gold">Gold</option>
                    <option value="platinum">Platinum</option>
                  </select>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Impact Score</label>
                  <input type="number" x-model.number="form.impactScore" min="0" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                </div>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Photo URL</label>
                <input type="url" x-model="form.photoUrl" placeholder="https://..." class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
              </div>
              
              <div class="flex items-center">
                <input type="checkbox" x-model="form.isVerified" id="isVerified" class="h-4 w-4 text-primary-600 border-gray-300 rounded focus:ring-primary-500">
                <label for="isVerified" class="ml-2 text-sm text-gray-700">Verified</label>
              </div>
            </div>
            
            <div class="flex justify-end gap-3 mt-6">
              <button type="button" @click="closeModal()" class="btn btn-secondary">Batal</button>
              <button type="submit" class="btn btn-primary" :disabled="saving">
                <span x-show="!saving" x-text="editingId ? 'Simpan' : 'Tambah'"></span>
                <span x-show="saving">Menyimpan...</span>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  
  <style>
    [x-cloak] { display: none !important; }
  </style>
  
  <script is:inline>
    document.addEventListener('alpine:init', () => {
      Alpine.data('influencerManager', () => ({
        loading: true,
        saving: false,
        showModal: false,
        editingId: null,
        items: [],
        form: {
          name: '',
          handle: '',
          platform: 'instagram',
          followersCount: 0,
          engagementRate: 0,
          tier: 'bronze',
          impactScore: 0,
          photoUrl: '',
          isVerified: false
        },
        
        async init() {
          await this.fetchData();
        },
        
        async fetchData() {
          try {
            const res = await fetch('/api/admin/influencers');
            if (res.ok) {
              this.items = await res.json();
            }
          } catch (error) {
            console.error('Failed to fetch:', error);
          } finally {
            this.loading = false;
          }
        },
        
        formatNumber(num) {
          if (num >= 1000000) return (num / 1000000).toFixed(1) + 'M';
          if (num >= 1000) return (num / 1000).toFixed(1) + 'K';
          return num?.toString() || '0';
        },
        
        openModal() {
          this.editingId = null;
          this.resetForm();
          this.showModal = true;
        },
        
        closeModal() {
          this.showModal = false;
          this.editingId = null;
          this.resetForm();
        },
        
        resetForm() {
          this.form = {
            name: '',
            handle: '',
            platform: 'instagram',
            followersCount: 0,
            engagementRate: 0,
            tier: 'bronze',
            impactScore: 0,
            photoUrl: '',
            isVerified: false
          };
        },
        
        editItem(item) {
          this.editingId = item.id;
          this.form = { ...item };
          this.showModal = true;
        },
        
        async saveItem() {
          this.saving = true;
          try {
            const method = this.editingId ? 'PUT' : 'POST';
            const body = this.editingId ? { ...this.form, id: this.editingId } : this.form;
            
            const res = await fetch('/api/admin/influencers', {
              method,
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify(body)
            });
            
            if (res.ok) {
              await this.fetchData();
              this.closeModal();
            } else {
              const error = await res.json();
              alert(error.error || 'Gagal menyimpan data');
            }
          } catch (error) {
            console.error('Save error:', error);
            alert('Terjadi kesalahan');
          } finally {
            this.saving = false;
          }
        },
        
        async deleteItem(id) {
          if (!confirm('Yakin ingin menghapus data ini?')) return;
          
          try {
            const res = await fetch('/api/admin/influencers?id=' + id, { method: 'DELETE' });
            if (res.ok) {
              await this.fetchData();
            } else {
              alert('Gagal menghapus data');
            }
          } catch (error) {
            console.error('Delete error:', error);
            alert('Terjadi kesalahan');
          }
        }
      }));
    });
  </script>
</BaseLayout>
