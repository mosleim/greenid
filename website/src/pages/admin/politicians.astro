---
import BaseLayout from '../../layouts/BaseLayout.astro';

export const prerender = false;

// Auth check
const sessionCookie = Astro.cookies.get('admin_session');
if (!sessionCookie) {
  return Astro.redirect('/admin');
}
---

<BaseLayout title="Kelola Politisi - Admin">
  <div class="min-h-screen bg-gray-50" x-data="politicianManager()">
    <!-- Admin Header -->
    <header class="bg-white border-b border-gray-200">
      <div class="container-wide py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-4">
            <a href="/admin/dashboard" class="text-gray-500 hover:text-gray-700">
              ‚Üê Dashboard
            </a>
            <h1 class="font-display text-2xl font-bold text-gray-900">
              Kelola Politisi
            </h1>
          </div>
          <button @click="openModal()" class="btn btn-primary">
            + Tambah Politisi
          </button>
        </div>
      </div>
    </header>
    
    <main class="container-wide py-8">
      <!-- Loading State -->
      <div x-show="loading" class="text-center py-12">
        <div class="text-gray-500">Memuat data...</div>
      </div>
      
      <!-- Empty State -->
      <div x-show="!loading && items.length === 0" class="text-center py-12">
        <div class="text-5xl mb-4">üèõÔ∏è</div>
        <h2 class="text-xl font-semibold text-gray-700 mb-2">Belum ada data politisi</h2>
        <p class="text-gray-500 mb-4">Mulai tambahkan politisi untuk dipantau</p>
        <button @click="openModal()" class="btn btn-primary">+ Tambah Politisi</button>
      </div>
      
      <!-- Data Table -->
      <div x-show="!loading && items.length > 0" class="card overflow-hidden">
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50 border-b">
              <tr>
                <th class="text-left p-4 font-semibold text-gray-700">Nama</th>
                <th class="text-left p-4 font-semibold text-gray-700">Jabatan</th>
                <th class="text-left p-4 font-semibold text-gray-700">Partai</th>
                <th class="text-left p-4 font-semibold text-gray-700">Slug</th>
                <th class="text-left p-4 font-semibold text-gray-700">Social</th>
                <th class="text-right p-4 font-semibold text-gray-700">Aksi</th>
              </tr>
            </thead>
            <tbody class="divide-y">
              <template x-for="item in items" :key="item.id">
                <tr class="hover:bg-gray-50">
                  <td class="p-4">
                    <div class="font-medium" x-text="item.name"></div>
                  </td>
                  <td class="p-4" x-text="item.position"></td>
                  <td class="p-4">
                    <span class="px-2 py-1 bg-gray-100 rounded text-sm" x-text="item.party || '-'"></span>
                  </td>
                  <td class="p-4">
                    <a :href="`/tracker/${item.slug}`" target="_blank" class="text-primary-600 hover:underline text-sm" x-text="item.slug"></a>
                  </td>
                  <td class="p-4">
                    <div class="flex gap-2">
                      <a x-show="item.twitterHandle" :href="`https://twitter.com/${item.twitterHandle}`" target="_blank" class="text-blue-500 hover:text-blue-700">ùïè</a>
                      <a x-show="item.instagramHandle" :href="`https://instagram.com/${item.instagramHandle}`" target="_blank" class="text-pink-500 hover:text-pink-700">üì∑</a>
                    </div>
                  </td>
                  <td class="p-4 text-right">
                    <button @click="editItem(item)" class="text-blue-600 hover:text-blue-800 mr-3">Edit</button>
                    <button @click="deleteItem(item.id)" class="text-red-600 hover:text-red-800">Hapus</button>
                  </td>
                </tr>
              </template>
            </tbody>
          </table>
        </div>
      </div>
    </main>
    
    <!-- Modal -->
    <div x-show="showModal" x-cloak class="fixed inset-0 z-50 overflow-y-auto" aria-modal="true">
      <div class="flex items-center justify-center min-h-screen px-4">
        <div class="fixed inset-0 bg-black bg-opacity-50" @click="closeModal()"></div>
        
        <div class="relative bg-white rounded-xl shadow-xl max-w-lg w-full p-6 max-h-[90vh] overflow-y-auto">
          <h2 class="font-display text-xl font-bold mb-6" x-text="editingId ? 'Edit Politisi' : 'Tambah Politisi'"></h2>
          
          <form @submit.prevent="saveItem()">
            <div class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Nama *</label>
                <input type="text" x-model="form.name" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Jabatan *</label>
                <input type="text" x-model="form.position" required placeholder="Menteri, Anggota DPR, dll" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Partai</label>
                <input type="text" x-model="form.party" placeholder="Nama partai (opsional)" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Bio</label>
                <textarea x-model="form.bio" rows="3" placeholder="Deskripsi singkat" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"></textarea>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Photo URL</label>
                <input type="url" x-model="form.photoUrl" placeholder="https://..." class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
              </div>
              
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Twitter/X</label>
                  <input type="text" x-model="form.twitterHandle" placeholder="username (tanpa @)" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Instagram</label>
                  <input type="text" x-model="form.instagramHandle" placeholder="username (tanpa @)" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                </div>
              </div>
            </div>
            
            <div class="flex justify-end gap-3 mt-6">
              <button type="button" @click="closeModal()" class="btn btn-secondary">Batal</button>
              <button type="submit" class="btn btn-primary" :disabled="saving">
                <span x-show="!saving" x-text="editingId ? 'Simpan' : 'Tambah'"></span>
                <span x-show="saving">Menyimpan...</span>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  
  <style>
    [x-cloak] { display: none !important; }
  </style>
  
  <script is:inline>
    document.addEventListener('alpine:init', () => {
      Alpine.data('politicianManager', () => ({
        loading: true,
        saving: false,
        showModal: false,
        editingId: null,
        items: [],
        form: {
          name: '',
          position: '',
          party: '',
          bio: '',
          photoUrl: '',
          twitterHandle: '',
          instagramHandle: ''
        },
        
        async init() {
          await this.fetchData();
        },
        
        async fetchData() {
          try {
            const res = await fetch('/api/admin/politicians');
            if (res.ok) {
              this.items = await res.json();
            }
          } catch (error) {
            console.error('Failed to fetch:', error);
          } finally {
            this.loading = false;
          }
        },
        
        openModal() {
          this.editingId = null;
          this.resetForm();
          this.showModal = true;
        },
        
        closeModal() {
          this.showModal = false;
          this.editingId = null;
          this.resetForm();
        },
        
        resetForm() {
          this.form = {
            name: '',
            position: '',
            party: '',
            bio: '',
            photoUrl: '',
            twitterHandle: '',
            instagramHandle: ''
          };
        },
        
        editItem(item) {
          this.editingId = item.id;
          this.form = { ...item };
          this.showModal = true;
        },
        
        async saveItem() {
          this.saving = true;
          try {
            const method = this.editingId ? 'PUT' : 'POST';
            const body = this.editingId ? { ...this.form, id: this.editingId } : this.form;
            
            const res = await fetch('/api/admin/politicians', {
              method,
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify(body)
            });
            
            if (res.ok) {
              await this.fetchData();
              this.closeModal();
            } else {
              const error = await res.json();
              alert(error.error || 'Gagal menyimpan data');
            }
          } catch (error) {
            console.error('Save error:', error);
            alert('Terjadi kesalahan');
          } finally {
            this.saving = false;
          }
        },
        
        async deleteItem(id) {
          if (!confirm('Yakin ingin menghapus politisi ini? Semua pernyataan terkait juga akan terhapus.')) return;
          
          try {
            const res = await fetch('/api/admin/politicians?id=' + id, { method: 'DELETE' });
            if (res.ok) {
              await this.fetchData();
            } else {
              alert('Gagal menghapus data');
            }
          } catch (error) {
            console.error('Delete error:', error);
            alert('Terjadi kesalahan');
          }
        }
      }));
    });
  </script>
</BaseLayout>
