---
import BaseLayout from '../../layouts/BaseLayout.astro';

export const prerender = false;

// Check if already logged in
const sessionCookie = Astro.cookies.get('admin_session');
if (sessionCookie) {
  return Astro.redirect('/admin/dashboard');
}
---

<BaseLayout 
  title="Admin Login" 
  description="Login to admin panel"
>
  <main class="min-h-screen bg-gradient-to-br from-primary-50 to-white flex items-center justify-center p-4">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="font-display text-3xl font-bold text-gray-900 mb-2">
          Admin Panel
        </h1>
        <p class="text-gray-600">
          Login untuk mengelola konten buyback.my.id
        </p>
      </div>
      
      <div 
        class="card"
        x-data="{ 
          loading: false, 
          error: '', 
          async handleSubmit(e) {
            e.preventDefault();
            this.loading = true;
            this.error = '';
            
            const formData = new FormData(e.target);
            const data = {
              username: formData.get('username'),
              password: formData.get('password'),
            };
            
            try {
              const response = await fetch('/api/admin/login', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data),
              });
              
              const result = await response.json();
              
              if (!response.ok) {
                this.error = result.error || 'Login gagal';
                this.loading = false;
                return;
              }
              
              // Redirect to dashboard
              window.location.href = '/admin/dashboard';
            } catch (err) {
              this.error = 'Terjadi kesalahan. Silakan coba lagi.';
              this.loading = false;
            }
          }
        }"
        @submit="handleSubmit"
      >
        <form>
          <div class="space-y-4">
            <!-- Error Message -->
            <div x-show="error" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg text-sm">
              <span x-text="error"></span>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Username
              </label>
              <input 
                type="text" 
                name="username"
                required
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                placeholder="Masukkan username"
              />
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Password
              </label>
              <input 
                type="password" 
                name="password"
                required
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                placeholder="Masukkan password"
              />
            </div>
          </div>
          
          <button 
            type="submit" 
            class="btn btn-primary w-full mt-6"
            :disabled="loading"
          >
            <span x-show="!loading">Login</span>
            <span x-show="loading">Memproses...</span>
          </button>
        </form>
        
        <p class="text-xs text-gray-500 mt-4 text-center">
          Halaman ini hanya untuk administrator. Jika kamu lupa password, 
          <a href="mailto:admin@buyback.my.id" class="text-primary-600 hover:underline">hubungi tim teknis</a>.
        </p>
      </div>
      
      <div class="text-center mt-6">
        <a href="/" class="text-sm text-gray-600 hover:text-primary-600">
          ‚Üê Kembali ke Beranda
        </a>
      </div>
    </div>
  </main>
</BaseLayout>
