---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { db, politicians as politiciansTable, statements as statementsTable } from '../../db';
import { eq, desc, sql } from 'drizzle-orm';

// Get politicians from database with statement counts
const politiciansData = db ? await db.select({
  id: politiciansTable.id,
  slug: politiciansTable.slug,
  name: politiciansTable.name,
  position: politiciansTable.position,
  party: politiciansTable.party,
  photoUrl: politiciansTable.photoUrl,
}).from(politiciansTable) : [];

// Get statement counts per politician
const statementCounts = db ? await db.select({
  politicianId: statementsTable.politicianId,
  count: sql<number>`count(*)`,
  latestSentiment: sql<string>`(SELECT sentiment FROM statements WHERE politician_id = ${statementsTable.politicianId} ORDER BY statement_date DESC LIMIT 1)`,
}).from(statementsTable).groupBy(statementsTable.politicianId) : [];

// Merge data
const politicians = politiciansData.map(p => {
  const stats = statementCounts.find(s => s.politicianId === p.id);
  return {
    ...p,
    statementsCount: stats?.count || 0,
    latestSentiment: stats?.latestSentiment || 'netral',
  };
});

// Get recent statements
const recentStatements = db ? await db.select({
  id: statementsTable.id,
  content: statementsTable.content,
  source: statementsTable.source,
  sentiment: statementsTable.sentiment,
  statementDate: statementsTable.statementDate,
  politicianName: politiciansTable.name,
  politicianSlug: politiciansTable.slug,
}).from(statementsTable)
  .innerJoin(politiciansTable, eq(statementsTable.politicianId, politiciansTable.id))
  .orderBy(desc(statementsTable.statementDate))
  .limit(5) : [];

// Calculate summary stats
const proCount = politicians.filter(p => p.latestSentiment === 'pro').length;
const kontraCount = politicians.filter(p => p.latestSentiment === 'kontra').length;
const netralCount = politicians.filter(p => p.latestSentiment === 'netral').length;

function getSentimentBadge(sentiment: string) {
  switch (sentiment) {
    case 'pro':
      return { emoji: 'âœ…', label: 'Mendukung', bg: 'bg-green-100', text: 'text-green-800' };
    case 'kontra':
      return { emoji: 'âŒ', label: 'Menolak', bg: 'bg-red-100', text: 'text-red-800' };
    default:
      return { emoji: 'â³', label: 'Belum Ada Pernyataan', bg: 'bg-yellow-100', text: 'text-yellow-800' };
  }
}
---

<BaseLayout 
  title="Tracker Pejabat" 
  description="Pantau sikap dan pernyataan pejabat publik terkait kebijakan buyback kemasan plastik."
>
  <Header />
  
  <main>
    <!-- Hero -->
    <section class="section bg-gradient-to-br from-yellow-50 to-white">
      <div class="container-wide">
        <div class="text-center mb-12">
          <h1 class="font-display text-4xl md:text-5xl font-bold text-gray-900 mb-4">
            Tracker Pejabat
          </h1>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Pantau sikap dan pernyataan pejabat publik terkait kebijakan buyback kemasan plastik.
          </p>
        </div>
        
        <!-- Summary Stats -->
        <div class="grid grid-cols-3 gap-4 max-w-2xl mx-auto mb-8">
          <div class="text-center p-4 bg-green-50 rounded-xl">
            <div class="font-display font-bold text-2xl text-green-600">{proCount}</div>
            <div class="text-sm text-green-700">Mendukung</div>
          </div>
          <div class="text-center p-4 bg-yellow-50 rounded-xl">
            <div class="font-display font-bold text-2xl text-yellow-600">{netralCount}</div>
            <div class="text-sm text-yellow-700">Belum Menyatakan</div>
          </div>
          <div class="text-center p-4 bg-red-50 rounded-xl">
            <div class="font-display font-bold text-2xl text-red-600">{kontraCount}</div>
            <div class="text-sm text-red-700">Menolak</div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Politicians Grid -->
    <section class="py-8 bg-white">
      <div class="container-wide">
        <h2 class="font-display text-2xl font-bold text-gray-900 mb-6">
          Daftar Pejabat Terkait
        </h2>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {politicians.map(politician => {
            const sentiment = getSentimentBadge(politician.latestSentiment);
            
            return (
              <a href={`/tracker/${politician.slug}`} class="card hover:shadow-xl transition-shadow group">
                <div class="flex items-start gap-4">
                  <div class="w-16 h-16 rounded-full bg-gray-200 flex items-center justify-center text-2xl shrink-0">
                    ğŸ‘¤
                  </div>
                  <div class="flex-1 min-w-0">
                    <h3 class="font-semibold text-lg group-hover:text-primary-600 transition-colors">
                      {politician.name}
                    </h3>
                    <p class="text-gray-600 text-sm">{politician.position}</p>
                    <p class="text-gray-500 text-xs">{politician.party}</p>
                  </div>
                </div>
                
                <div class="mt-4 pt-4 border-t border-gray-100 flex items-center justify-between">
                  <span class={`badge ${sentiment.bg} ${sentiment.text}`}>
                    {sentiment.emoji} {sentiment.label}
                  </span>
                  <span class="text-xs text-gray-500">
                    {politician.statementsCount} pernyataan
                  </span>
                </div>
              </a>
            );
          })}
        </div>
      </div>
    </section>
    
    <!-- Recent Statements -->
    <section class="section bg-gray-50">
      <div class="container-wide">
        <h2 class="font-display text-2xl font-bold text-gray-900 mb-6">
          Pernyataan Terbaru
        </h2>
        
        {recentStatements.length > 0 ? (
          <div class="space-y-4">
            {/* Statement cards will go here */}
          </div>
        ) : (
          <div class="text-center py-12 bg-white rounded-xl">
            <div class="text-5xl mb-4">ğŸ“¢</div>
            <h3 class="font-semibold text-lg mb-2">Belum Ada Pernyataan</h3>
            <p class="text-gray-600 max-w-md mx-auto">
              Kami terus memantau pernyataan pejabat publik terkait kebijakan buyback. 
              Pernyataan baru akan ditampilkan di sini.
            </p>
          </div>
        )}
      </div>
    </section>
    
    <!-- CTA -->
    <section class="section bg-primary-600">
      <div class="container-narrow text-center">
        <h2 class="font-display text-2xl md:text-3xl font-bold text-white mb-6">
          Bantu Kami Memantau
        </h2>
        <p class="text-primary-100 mb-8 max-w-xl mx-auto">
          Temukan pernyataan pejabat terkait buyback atau pengelolaan sampah plastik? 
          Laporkan ke kami agar bisa kami verifikasi dan tambahkan.
        </p>
        <a href="/aksi#lapor" class="btn bg-white text-primary-700 hover:bg-primary-50 px-8 py-4">
          Laporkan Pernyataan
        </a>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>
