---
const currentYear = new Date().getFullYear();

const footerLinks = {
  gerakan: [
    { href: '/tentang', label: 'Tentang Gerakan' },
    { href: '/leaderboard', label: 'Leaderboard' },
    { href: '/tracker', label: 'Tracker Pejabat' },
    { href: '/data', label: 'Data & Riset' },
  ],
  aksi: [
    { href: '/aksi', label: 'Cara Berkontribusi' },
    { href: '/bergabung', label: 'Bergabung' },
    { href: '/aksi#kit', label: 'Download Kit' },
  ],
  legal: [
    { href: '/privasi', label: 'Kebijakan Privasi' },
    { href: '/syarat', label: 'Syarat & Ketentuan' },
  ]
};

const socialLinks = [
  { href: 'https://twitter.com/buybackid', label: 'Twitter', icon: 'twitter' },
  { href: 'https://instagram.com/buybackid', label: 'Instagram', icon: 'instagram' },
  { href: 'https://tiktok.com/@buybackid', label: 'TikTok', icon: 'tiktok' },
];
---

<footer class="bg-gray-900 text-gray-300">
  <div class="container-wide py-12 md:py-16">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-12">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="flex items-center space-x-2 mb-4">
          <span class="text-2xl">♻️</span>
          <span class="font-display font-bold text-xl text-white">Buyback</span>
        </a>
        <p class="text-sm text-gray-400 mb-4">
          Gerakan untuk kebijakan buyback kemasan plastik di Indonesia.
        </p>
        <div class="flex space-x-3">
          {socialLinks.map(social => (
            <a 
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-full bg-gray-800 flex items-center justify-center hover:bg-primary-600 transition-colors"
              aria-label={social.label}
            >
              {social.icon === 'twitter' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              )}
              {social.icon === 'instagram' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              )}
              {social.icon === 'tiktok' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>
      
      <!-- Gerakan -->
      <div>
        <h4 class="font-semibold text-white mb-4">Gerakan</h4>
        <ul class="space-y-2">
          {footerLinks.gerakan.map(link => (
            <li>
              <a href={link.href} class="text-sm hover:text-primary-400 transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Aksi -->
      <div>
        <h4 class="font-semibold text-white mb-4">Aksi</h4>
        <ul class="space-y-2">
          {footerLinks.aksi.map(link => (
            <li>
              <a href={link.href} class="text-sm hover:text-primary-400 transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Legal -->
      <div>
        <h4 class="font-semibold text-white mb-4">Legal</h4>
        <ul class="space-y-2">
          {footerLinks.legal.map(link => (
            <li>
              <a href={link.href} class="text-sm hover:text-primary-400 transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <!-- Bottom -->
    <div class="border-t border-gray-800 mt-12 pt-8 text-center text-sm text-gray-500">
      <p>&copy; {currentYear} Buyback Indonesia. Gerakan ini bersifat terbuka dan non-profit.</p>
    </div>
  </div>
</footer>
